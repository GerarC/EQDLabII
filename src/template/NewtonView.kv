<NewtonView@Screen>:
    function_string: function_input.text
    x0_string: x0_value_input.text
    tol_string: tol_value_input.text
    max_string: max_value_input.text
    name: 'newton_raphson'
    MDBoxLayout:
        spacing: 20
        orientation: 'vertical'
        MDTopAppBar:
            title: 'Método Newton-Rapshon'
        MDGridLayout:
            size_hint: (1, 0.15)
            spacing: (10, 0)
            padding: 10
            cols: 3
            MDLabel:
                text: 'Función: '
                halign: 'center'
                size_hint: (0.25, 1)
                font_size: '20sp'
            TextInput:
                size_hint: (0.6, 1)
                id: function_input
                font_size: '20sp'
        MDGridLayout:
            size_hint: (1, 0.25)
            cols: 4
            padding: 10
            spacing: (10, 0)
            MDLabel:
                text: 'X0:'
                halign: 'center'
                size_hint: (0.1, 1)
                font_size: '20sp'
                margin: (10, 0)
            TextInput:
                size_hint: (0.4, 1)
                id: x0_value_input
                font_size: '20sp'
            MDLabel:
                text: 'Tol:'
                halign: 'center'
                size_hint: (0.1, 1)
                font_size: '20sp'
            TextInput:
                size_hint: (0.4, 1)
                id: tol_value_input
                font_size: '20sp'
            MDLabel:
                text: 'Max Iter:'
                halign: 'center'
                size_hint: (0.3, 1)
                font_size: '20sp'
            TextInput:
                size_hint: (0.3, 1)
                id: max_value_input
                font_size: '20sp'
            MDRaisedButton:
                text: "Calculate"
                size_hint: (0.5, 1)
                on_press: root.on_calculate_pressed()

        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: '[b]Resultado[/b]'
                size_hint: (1, 0.05)
                font_size: '20sp'
                halign: 'center'
                markup: True
            MDBoxLayout:
                size_hint: (1, 0.25)
                orientation: 'vertical'
                MDLabel:
                    halign: 'center'
                    font_size: '18sp'
                    size_hint: (1, 0.05)
                    text: root.result_newton_raphson
